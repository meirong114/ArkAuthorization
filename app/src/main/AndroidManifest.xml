<?xml version='1.0' encoding='utf-8'?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="prts.user.authorization0">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideoPlayer">

        <activity
            android:name="SplashActivity"
            android:screenOrientation="portrait"
            android:label="@string/launcher_name"
            android:icon="@drawable/prts"
            android:configChanges="orientation|screenSize">

            <intent-filter>

                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

                <category android:name="android.intent.category.HOME"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <action android:name="android.intent.action.BOOT_COMPLETED"/>

            </intent-filter>

        </activity>

        <activity
            android:name="WakeupActivity"
            android:exported="true"/>

        <activity android:name="MainActivity"/>

        <activity
            android:exported="true"
            android:name="prts.user.authorization0.SecondaryStartup"/>

        <service android:name="prts.user.authorization0.StartMainService"/>

        <activity android:name="prts.user.authorization0.VideoPlayerActivity"/>

    </application>

</manifest>
